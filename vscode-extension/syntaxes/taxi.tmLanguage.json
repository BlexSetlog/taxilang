{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "taxi",
  "patterns": [
    {
      "begin": "\\b(namespace)\\b\\s*",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.package.taxi"
        }
      },
      "end": "\\s*(;)",
      "endCaptures": {
        "1": {
          "name": "punctuation.terminator.taxi"
        }
      },
      "name": "meta.package.taxi",
      "contentName": "storage.modifier.package.taxi",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "match": "(?<=\\.)\\s*\\.|\\.(?=\\s*;)",
          "name": "invalid.illegal.character_not_allowed_here.taxi"
        },
        {
          "match": "(?<!_)_(?=\\s*(\\.|;))|\\b\\d+|-+",
          "name": "invalid.illegal.character_not_allowed_here.taxi"
        },
        {
          "match": "[A-Z]+",
          "name": "invalid.deprecated.package_name_not_lowercase.taxi"
        },
        {
          "match": "\\.",
          "name": "punctuation.separator.taxi"
        }
      ]
    },
    {
      "begin": "\\b(import)\\b\\s*\\b(static)?\\b\\s",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.import.taxi"
        },
        "2": {
          "name": "storage.modifier.taxi"
        }
      },
      "end": "\\s*(;)",
      "endCaptures": {
        "1": {
          "name": "punctuation.terminator.taxi"
        }
      },
      "name": "meta.import.taxi",
      "contentName": "storage.modifier.import.taxi",
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "match": "(?<=\\.)\\s*\\.|\\.(?=\\s*;)",
          "name": "invalid.illegal.character_not_allowed_here.taxi"
        },
        {
          "match": "(?<!\\.)\\s*\\*",
          "name": "invalid.illegal.character_not_allowed_here.taxi"
        },
        {
          "match": "(?<!_)_(?=\\s*(\\.|;))|\\b\\d+|-+",
          "name": "invalid.illegal.character_not_allowed_here.taxi"
        },
        {
          "match": "(?x)\\b(?<!\\$)\n(abstract|assert|boolean|break|byte|case|catch|char|class|\nconst|continue|default|do|double|else|enum|extends|final|\nfinally|float|for|goto|if|implements|import|instanceof|int|\ninterface|long|native|new|package|private|protected|public|\nreturn|short|static|strictfp|super|switch|syncronized|this|\nthrow|throws|transient|try|void|volatile|while|\ntrue|false|null)\\b",
          "name": "invalid.illegal.character_not_allowed_here.taxi"
        },
        {
          "match": "\\.",
          "name": "punctuation.separator.taxi"
        },
        {
          "match": "\\*",
          "name": "variable.language.wildcard.taxi"
        }
      ]
    },
    {
      "include": "#comments-taxidoc"
    },
    {
      "include": "#code"
    },
    {
      "include": "#module"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.taxi",
          "match": "\\b(type|alias|inherits|enum|namespace|as|service|operation|import|policy|against|read|write|case|else|permit|filter)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.taxi",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.taxi",
          "match": "\\\\."
        }
      ]
    },

    "comments": {
      "patterns": [
        {
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.taxi"
            }
          },
          "match": "/\\*\\*/",
          "name": "comment.block.empty.taxi"
        },
        {
          "include": "#comments-inline"
        }
      ]
    },
    "comments-inline": {
      "patterns": [
        {
          "begin": "/\\*",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.taxi"
            }
          },
          "end": "\\*/",
          "name": "comment.block.taxi"
        },
        {
          "begin": "(^[ \\t]+)?(?=//)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.taxi"
            }
          },
          "end": "(?!\\G)",
          "patterns": [
            {
              "begin": "//",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.definition.comment.taxi"
                }
              },
              "end": "\\n",
              "name": "comment.line.double-slash.taxi"
            }
          ]
        }
      ]
    },
    "comments-taxidoc": {
      "patterns": [
        {
          "begin": "^\\s*(/\\[\\[)(?!/)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.comment.taxi"
            }
          },
          "end": "\\]\\]",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.taxi"
            }
          },
          "name": "comment.block.taxidoc.taxi",
          "patterns": [
            {
              "match": "{(@link)\\s+(\\S+)?#([\\w$]+\\s*\\([^\\(\\)]*\\)).*?}",
              "captures": {
                "1": {
                  "name": "keyword.other.documentation.taxidoc.taxi"
                },
                "2": {
                  "name": "entity.name.type.class.taxi"
                },
                "3": {
                  "name": "variable.parameter.taxi"
                }
              }
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.taxi"
}